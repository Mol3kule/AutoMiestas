generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model makes {
  id          Int           @id @default(autoincrement())
  make        String        @unique
  make_models make_models[]
}

model make_models {
  id        Int    @id @default(autoincrement())
  make_id   Int
  model     String
  makes     makes  @relation(fields: [make_id], references: [id])
  year      Json
  engine_l  Float?
  cylinders Int?
}

model users {
  id               Int      @id @default(autoincrement())
  userId           String   @unique
  stripeCustomerId String   @unique
  email            String   @unique
  first_name       String
  last_name        String
  phone_number     String
  organization     String
  date_registered  DateTime @default(now())
  posts            posts[]
}

model posts {
  id                   Int     @id @default(autoincrement())
  authorId             String
  authorRelation       users?  @relation(fields: [authorId], references: [userId])
  information          Json
  images               Json
  statistics           Json
  periods              Json
  boosts               Json
  tags                 Json
  ratingByAuthor       Json
  category             Int
  subscriptionId       String
  isActive             Boolean
  isVerified           Boolean
  isSubscriptionActive Boolean
}
